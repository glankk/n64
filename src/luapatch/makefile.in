prefix                        = @prefix@
exec_prefix                   = @exec_prefix@
bindir                        = @bindir@
srcdir                        = @srcdir@
CC                            = @CC@
CPPFLAGS                      = -I$(srcdir)/.. -I$(srcdir)/../../include @CPPFLAGS@
CFLAGS                        = -std=c11 -Wall @CFLAGS@
LDFLAGS                       = -Wl,-rpath,\$$ORIGIN/../lib @LDFLAGS@
LDLIBS                        =
SRC                           = $(srcdir)/*.c
PROGNAME                      = luapatch
INSTALL                       = @INSTALL@
MKDIR_P                       = @MKDIR_P@

.PHONY                        : all install install-strip clean distclean

all                           : $(PROGNAME)
install                       : | $(bindir)
	$(INSTALL) -p $(PROGNAME) $(bindir)
	@if test -n "$(EMUDIR)"; then \
		echo installing \`patch.lua\` to "$(EMUDIR)/Lua"...; \
		cp -p -m 0644 $(srcdir)/patch.lua "$(EMUDIR)/Lua"; \
	else \
		echo warning: no EMUDIR specified, skipping \`patch.lua\` installation; \
	fi
install-strip                 :
	$(MAKE) INSTALL="$(INSTALL) -s" install
clean                         :
	rm -f $(PROGNAME)
distclean                     :
	rm -f makefile
$(PROGNAME)                   : $(SRC)
	$(CC) $(CPPFLAGS) $(CFLAGS) $(LDFLAGS) $^ $(LDLIBS) -o $@
$(bindir)                     :
	$(MKDIR_P) $(bindir)
